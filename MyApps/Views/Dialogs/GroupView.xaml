<UserControl x:Class="MyApps.Views.Dialogs.GroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyApps.Views.Dialogs"
             xmlns:dialogs="clr-namespace:MyApps.ViewModels.Dialogs"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance dialogs:GroupViewModel}">
    
    <Grid Margin="8 16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Margin="4 0" Grid.Column="0" VerticalAlignment="Center" Text="Name"/>
        <TextBox Grid.Column="1" Text="{Binding GroupName}"/>
    </Grid>
    
</UserControl>
